<?xml version="1.0" encoding="utf-8"?>
<cn.linked.commonlib.view.RoundRectShadowCoverView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cornerRadius="10dp"
    app:contentBackground="@color/white"
    android:layout_width="300dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/shape_message_dialog_bottom_border"
            android:gravity="center"
            android:layout_height="50dp">
            <ImageView
                android:visibility="gone"
                android:layout_marginEnd="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:id="@+id/titleText"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="提示信息"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <cn.linked.commonlib.view.AppScrollView
            app:maxHeight="100dp"
            android:background="@drawable/shape_message_dialog_bottom_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/messageText"
                android:textColor="@color/black"
                android:minHeight="80dp"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="16dp"
                android:text="这是信息。"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </cn.linked.commonlib.view.AppScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:divider="@color/gray"
            android:showDividers="middle"
            android:dividerPadding="1px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/activeButton1"
                android:visibility="gone"
                android:height="50dp"
                android:gravity="center"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:text="确定"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/selector_message_dialog_button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/activeButton2"
                android:visibility="gone"
                android:height="50dp"
                android:gravity="center"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:text="确定"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/selector_message_dialog_button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/activeButton3"
                android:visibility="gone"
                android:height="50dp"
                android:gravity="center"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:text="确定"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/selector_message_dialog_button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</cn.linked.commonlib.view.RoundRectShadowCoverView>