<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.linked.link">

    <application
        android:name="cn.linked.baselib.LinkApplication"
        android:allowBackup="true"
        android:icon="@drawable/img_login_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LaunchActivity" android:screenOrientation="portrait" android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".business.login.LoginActivity" android:screenOrientation="portrait" android:launchMode="singleTask"/>
        <activity android:name=".business.main.MainActivity" android:screenOrientation="portrait" android:launchMode="singleTask"/>
    </application>

</manifest>