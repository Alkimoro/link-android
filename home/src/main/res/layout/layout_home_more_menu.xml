<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/shape_home_more_menu_triangle"
        android:scaleType="fitXY"
        android:layout_gravity="end"
        android:layout_marginEnd="22dp"
        android:layout_width="16dp"
        android:layout_height="8dp"/>

    <cn.linked.commonlib.view.RoundRectShadowCoverView
        app:contentBackground="@color/white"
        android:layout_marginEnd="4dp"
        app:cornerRadius="10dp"
        android:paddingStart="10dp"
        android:layout_width="160dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/menuItem1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="40dp">
                <ImageView
                    android:src="@drawable/shape_home_more_menu_icon2"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:paddingStart="5dp"
                    android:textSize="17dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/darkGray"
                    android:text="创建群聊"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/menuItem2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="40dp">
                <ImageView
                    android:src="@drawable/shape_home_more_menu_icon1"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:paddingStart="5dp"
                    android:textSize="17dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/darkGray"
                    android:text="加好友/群"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </cn.linked.commonlib.view.RoundRectShadowCoverView>

</LinearLayout>